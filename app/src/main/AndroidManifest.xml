<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zheng.jialin.com.helloandroid">

    <application
        android:name="zheng.jialin.com.until.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 定义Activity -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".DisplayActivity"></activity>
        <activity android:name=".ClockActivity"></activity>
        <activity android:name="zheng.jialin.com.demo.ContentActivity"></activity>
    </application>

</manifest>
